{
  "name": "company-scrapper",
  "version": "1.0.0",
  "description": "Scrapes area for companies with less than 100 employees",
  "main": "main.js",
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "mongodb": "^6.8.0"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-frontend": "cd frontend && npm install && npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.company.finder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "package.json",
      "backend/**/*",
      "frontend/build/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}